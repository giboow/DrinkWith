<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        {% block stylesheets %}
            {% stylesheets filter="compass" "@DrinkWithMainBundle/Resources/assets/scss/clear.scss"
                            "@DrinkWithMainBundle/Resources/assets/scss/main.scss"
                            output="style/drink-main.css"%}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}

        <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
        {% endblock %}

        {% block headJavascripts %}
        <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
        <script type="text/javascript" src="http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function(){
                $("#overlay").overlay({
                    mask: '#000',
                });
                $("#btJoin").click(showUserJoinForm);
                $("#btLogin").click(showUserLoginForm)


            });

            function showUserJoinForm() {
                $.ajax({
                    url: '{{ path('fos_user_registration_register') }}'
                }).done(function(response){
                    $("#overlayContent").html(response);
                    $("#overlay").overlay().load();
                });
            }
            function showUserLoginForm() {
                $.ajax({
                    url: '{{ path('fos_user_security_login') }}'
                }).done(function(response){
                    $("#overlayContent").html(response);
                    $("#overlay").overlay().load();
                });
            }
        </script>
        {% endblock %}

        <title>{% block title %}Drink With{% endblock %}</title>
    </head>
    <body>
        <header id="topHeader">
            <div id="logo">Drink-With.me</div>
            <nav id="navHeader">
                <ul>
                    <li><a href="{{ path("_home") }}">{{ 'home'|trans|upper }}</a></li>
                </ul>
            </nav>
            <div id="connect">
                <div id="btLogin">
                    {{ 'login'|trans|upper }}
                </div>
                <div id="btJoin">
                    {{ 'subscribe'|trans|upper }}
                </div>
            </div>
        </header>
        <div id="content">
            {% block content %}
            {% endblock %}
        </div>
        <div id="overlay">
            <div id="overlayContent"></div>
        </div>
        <footer id="bottomFooter">
            <div id="copyrights">
             &copy;{{ "now"|date("Y") }} <a href="">drink-with.me</a> - <a href="{{ path("_home") }}">{{ 'contact.us'|trans }}</a>
            </div>
        </footer>
    </body>
</html>