{% extends "DrinkWithMainBundle::layout.html.twig" %}

{% block content %}
    <div class="pagerFanta barList">
        <table border=1>
        {% for data in paginator.currentPageResults %}
            <tr>
                <td class="name"><a href="{{ path('_bar_get',{ "id": data.id }) }}">{{ data.getName() }}</a></td>
                <td class="longitude">{{ data.getLongitude() }}</td>
                <td class="latitude">{{ data.getLatitude() }}</td>
            </tr>
        {% endfor %}
        </table>
        {{ pagerfanta(paginator, 'default', pagerfanta_opts) }}
    </div>

{% endblock %}